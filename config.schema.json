{
  "type": "object",
  "properties": {
    "allowed": {
      "type": "object",
      "properties": {
        "users": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "teams": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false,
      "default": {},
      "description": "List of users and teams allowed to create parent issues"
    },
    "targetRepositorySelectors": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "method": {
                "type": "string",
                "const": "name-pattern",
                "description": "Match repositories by name pattern"
              },
              "identifier": {
                "type": "string",
                "description": "Identifier fragment of the repository name to match, e.g. \"sdk\""
              },
              "patternType": {
                "type": "string",
                "enum": [
                  "starts-with",
                  "contains",
                  "ends-with"
                ],
                "default": "contains",
                "description": "Type of pattern matching to use"
              }
            },
            "required": [
              "method",
              "identifier"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "method": {
                "type": "string",
                "const": "explicit",
                "description": "Explicitly list repositories"
              },
              "repositories": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of repositories to match, e.g. \"dotnet-sdk\""
              }
            },
            "required": [
              "method",
              "repositories"
            ],
            "additionalProperties": false
          }
        ]
      },
      "default": [],
      "description": "List of selectors for target repositories where the child issue will be created"
    }
  },
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}